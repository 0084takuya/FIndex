<% player = player_id_to_player(transaction.player_id) %>
<tr onclick='window.location="<%= '/players/' + transaction.player_id.to_s %>"' role="link">
    <td>
        <%= player_image(player.image_name) %>
    </td>
    <td>
        <p class="buy-user"><%= user_id_to_user(transaction.user_id).user_name %>さんが購入</p>
        <p class="buy-info"><%= player.name %> x <%= transaction.amount %></p>
    </td>
    <td>
        <p class="buy-cost"><%= transaction.amount * transaction.buy_price %></p>
    </td>
</tr>