<div class="header-pc">
    <div class="header-top">
        <div class="header-logo">
            <p>Football Index</p>
        </div>
        <div class="header-search-form">
            <%= form_tag :players, method: :get, class: "search-form" do %>
                <%= text_field_tag :search, "", class: "search-field", placeholder: "選手名、チーム名、ポジション..." %>
                <%= button_tag type: :submit, class: "search-button" do %>
                    <%= image_tag "system/search" %>
                <% end %>
            <% end %>
        </div>
        <div class="header-top-buttons">
            <% if logged_in? %>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "white-button" %>
            <% else %>
                <%= link_to "ログイン", login_path, class: "white-button" %>
                <%= link_to "登録", :new_user, class: "green-button" %>
            <% end %>
        </div>
    </div>
    <div class="header-bottom">
        <nav>
            <div class="header-item border-right">
                <%= image_tag "system/chart" %>
                <%= link_to "マーケット", :players %>
            </div>
            <div class="header-item border-right">
                <%= image_tag "system/medal" %>
                <%= link_to "ディビデント", :dividend_index %>
            </div>
        </nav>
        <% if logged_in? %>
            <div class="header-item border-left">
                <%= image_tag "system/white_person" %>
                <%= link_to "マイページ", current_user %>
            </div>
        <% end %>
    </div>
</div>
<div class="header-global">
    <div class="header-bar">
        <div class="header-logo">
            <p>Football Index</p>
        </div>
        <div class="navToggle">
            <span></span><span></span><span></span><span></span>
        </div>
    </div>
    <nav class="globalMenuSp">
        <ul>
            <li>
                <%= image_tag "system/chart" %>
                <%= link_to "マーケット", :players %>
            </li>
            <li>
                <%= image_tag "system/medal" %>
                <%= link_to "ディビデント", :dividend_index %>
            </li>        
            <% if logged_in? %>
                <li>
                    <%= image_tag "system/white_person" %>
                    <%= link_to "マイページ", current_user %>
                </li>
                <li>
                    <%= image_tag "system/logout" %>
                    <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
            <% else %>
                <li>
                    <%= image_tag "system/login" %>
                    <%= link_to "ログイン", login_path %>
                </li>
                <li>
                    <%= image_tag "system/register" %>
                    <%= link_to "登録", :new_user %>
                </li>
            <% end %>
        </ul>
    </nav>
</div>
<%= javascript_pack_tag 'header' %>